<% provide(:title, 'Blog') %>
<h1 class="page-header">Email List</h1>
<div class="users-content col-sm-10 col-sm-offset-1">
  
  <table class="table table-striped table-bordered user-list">
    <tr>
      <th>Email</th>
      <th>Date Joined</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= link_to 'remove', user, method: :delete, 
                                         data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </table>
  
</div>