<footer class="footer">
  <div class = "email-signup">
    <div class="col-md-6 col-md-offset-3">
      <p>Join our mailing list to keep up to date with our latest flavors and news!</p>
      <%= form_for(@user, url: menu_path) do |f| %>
        <%= render 'shared/error_messages' %>
        
        <%= f.email_field :email, class: 'form-field', :placeholder => "your@email.com" %>
        <%= f.submit "Join", class: "btn btn-lg" %>
      <% end %>
    </div>
  </div>
  <div class="footer-info">
    <div class="social-icons">
      <h4>Let's be friends!</h4>
      <ul>
        <li><a target="_blank" href="https://twitter.com/sweetgems_htx"><i class="fa fa-2x fa-twitter"></i></a></li>
        <li><a target="_blank" href="https://www.facebook.com/sweetgemshtx"><i class="fa fa-2x fa-facebook"></i></a></li>
        <li><a target="_blank" href="https://www.instagram.com/sweetgems_htx"><i class="fa fa-2x fa-instagram"></i></a></li>
        <li><a target="_blank" href="https://www.pinterest.com/sweetgems_htx/"><i class="fa fa-2x fa-pinterest"></i></a></li>
      </ul>
    </div>
    <small> &copy; <%= Time.now.year %> Sweet Gems, LLC. </small>
  </div>
</footer>